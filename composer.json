{
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
     "require": {
        "php": ">=5.4",
        "composer/installers": "1.*",
        "johnpbloch/wordpress": "*",
        "lkwdwrd/wp-muplugin-loader": "~1.0.0",
        "wpackagist-plugin/sendgrid-email-delivery-simplified": "*",
        "wpackagist-plugin/better-wp-security": "*",
        "wpackagist-plugin/redis-cache": "*",
        "deliciousbrains/spinupwp-mu-plugin": "*",
        "wpackagist-theme/evolve": "*"
    },
    "extra": {
        "wordpress-install-dir": "public/app",
        "installer-paths": {
            "public/resources/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/resources/modules/{$name}/": ["type:wordpress-plugin"],
            "public/resources/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
